<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:abstractions="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             x:Class="FYP_GeeksClub.AccountManagerPage"
             BackgroundColor="#1C83E8"
             NavigationPage.IconColor="White"
             NavigationPage.BackButtonTitle="Back">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="9.5*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <StackLayout Grid.Column ="1" Grid.Row="1">

            <Label Text="Account:" TextColor="White"/>
            <Button Text="Change Name" 
                    x:Name="ChangeName" 
                    Clicked="ChangeName_Clicked" 
                    ContentLayout="Right" 
                    BackgroundColor="White"
                    Image="edit_18px.png" 
                    HeightRequest="38"/>


            <Button
                x:Name="ChangeImage" 
                Clicked="ChangeImage_Clicked" 
                Text="Change Image" 
                BackgroundColor="White"
                HeightRequest="38"
                ContentLayout="Right" 
                Image ="open_18px"/>

            <Button
                x:Name="UserInformation" 
                Clicked="EditInformation_Clicked" 
                Text="Edit Information" 
                BackgroundColor="White"
                HeightRequest="38"
                ContentLayout="Right" 
                Image ="edit_doc_18px"/>

            <Button
                x:Name="UseCase" 
                Clicked="UseCase_Clicked" 
                Text="Change Main Use Case" 
                BackgroundColor="White"
                HeightRequest="38"
                ContentLayout="Right" 
                Image ="edit_doc_18px"/>

            <Label Text=" "/>
            <Label Text="Item:" TextColor="White"/>
            <Button
                x:Name="ShowMyItem"
                Text="My Item"
                Clicked="MyItem_Clicked"
                BackgroundColor="White"
                HeightRequest="38"
                ContentLayout="Right"
                ImageSource="list_18px.png"/>

            <Button
                x:Name="ShowOrder"
                Text="Order"
                Clicked="ShowOrder_Clicked"
                BackgroundColor="White"
                HeightRequest="38"
                ContentLayout="Right"
                ImageSource="order_18px.png"/>

            <Label Text=" "/>
            <Label Text="System:" TextColor="White"/>

            <Button 
                x:Name="Logout" 
                Clicked="Logout_Clicked" 
                Text="Logout" 
                BackgroundColor="White"
                HeightRequest="38"
                ContentLayout="Right"
                Image ="exit_18px"/>

        </StackLayout>

    </Grid>

</ContentPage>