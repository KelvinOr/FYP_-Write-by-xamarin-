<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:abstractions="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             x:Class="FYP_GeeksClub.AccountManagerPage"
             BackgroundColor="#1C83E8"
             NavigationPage.HasNavigationBar="False">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <StackLayout Grid.Column ="1" Grid.Row="1">

            <Frame 
                HasShadow="False"
                CornerRadius="50" 
                HeightRequest="100" 
                WidthRequest="100" 
                Padding="0" 
                IsClippedToBounds="True" 
                HorizontalOptions="Center"
                VerticalOptions="Center">
                    
                <Image 
                    x:Name="imgSorce"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Aspect="AspectFit"/>
            </Frame>

            <Label x:Name="lb_user" TextColor="White" FontSize="20" HorizontalOptions="Center"/>

            <Label Text=""/>
            <Label Text=""/>

            <Button Text="Change Name" 
                    x:Name="ChangeName" 
                    Clicked="ChangeName_Clicked" 
                    TextColor="Black" 
                    ContentLayout="Right" 
                    BackgroundColor="White"
                    Image="edit_18px.png" 
                    HeightRequest="38"/>
            
            
            <Button
                x:Name="ChangeImage" 
                Clicked="ChangeImage_Clicked" 
                Text="Change Image" 
                TextColor="Black"
                BackgroundColor="White"
                HeightRequest="38"
                ContentLayout="Right"
                Image ="open_18px"/>
            
            <Button 
                x:Name="Logout" 
                Clicked="Logout_Clicked" 
                Text="Logout" 
                TextColor="Black"
                BackgroundColor="White"
                HeightRequest="38"
                ContentLayout="Right"
                Image ="exit_18px"/>

        </StackLayout>

    </Grid>

</ContentPage>