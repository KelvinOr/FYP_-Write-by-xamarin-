<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FYP_GeeksClub.AccountManagerPage"
             BackgroundColor="#1C83E8"
             NavigationPage.HasNavigationBar="False">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <StackLayout Grid.Column ="1" Grid.Row="1">

            <Label x:Name="lb_user" TextColor="White"/>

            <Button Text="Change Name" x:Name="ChangeName" Clicked="ChangeName_Clicked"/>
            <Button x:Name="ChangeImage" Clicked="ChangeImage_Clicked" Text="Change Image"/>
            <Button x:Name="Logout" Clicked="Logout_Clicked" Text="Logout"/>

            <StackLayout Padding="40">
                <Frame CornerRadius="200" HeightRequest="100" WidthRequest="100" Padding="0" IsClippedToBounds="True" HorizontalOptions="Center">
                    <Image x:Name="imgSorce" VerticalOptions="Center" HorizontalOptions="Center"/>
                </Frame>
            </StackLayout>

            <!--<Image x:Name="imgChoosed"/>-->
          

        </StackLayout>

    </Grid>

</ContentPage>